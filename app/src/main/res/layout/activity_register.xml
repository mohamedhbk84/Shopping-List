<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back_desgin"
    tools:context=".RegisterActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
    <TextView
        android:id="@+id/RegisterTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#fff" />
    <EditText
        android:id="@+id/EditTxt_Email_Register"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_background"
        android:hint="Email"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />
    <EditText
        android:id="@+id/EditTxt_password_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:layout_margin="10dp"
        android:background="@drawable/ed_background"
        android:padding="10dp"/>
    <Button
        android:id="@+id/ButtonSignIn_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ed_background"
        android:text="Sign In "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/TextSignUpRegister"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:text="Aready have account ? Sign in here "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#fff"
        android:padding="5dp"
        android:gravity="center"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>